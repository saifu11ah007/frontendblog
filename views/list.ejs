<%- include('partials/blog-header') %>
<header class="header text-center">
	<h1 class="blog-name pt-lg-4 mb-0"><a href="/">Saif's Blog</a></h1>
	<nav class="navbar navbar-expand-lg navbar-dark">
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>

		<div id="navigation" class="collapse navbar-collapse flex-column">
			<div class="profile-section pt-3 pt-lg-0">
				<img class="profile-image mb-3 rounded-circle mx-auto" src="assets/images/1700916338489.jfif" alt="image">
				<div class="bio mb-3">Hi, my name is Saif Ullah. Briefly introduce yourself here. You can also provide a link to the about page.<br><a href="/about">Find out more about me</a></div>
				<ul class="social-list list-inline py-3 mx-auto">
					<li class="list-inline-item"><a href="#"><i class="fab fa-twitter fa-fw"></i></a></li>
					<li class="list-inline-item"><a href="#"><i class="fab fa-linkedin-in fa-fw"></i></a></li>
					<li class="list-inline-item"><a href="#"><i class="fab fa-github-alt fa-fw"></i></a></li>
					<li class="list-inline-item"><a href="#"><i class="fab fa-stack-overflow fa-fw"></i></a></li>
					<li class="list-inline-item"><a href="#"><i class="fab fa-codepen fa-fw"></i></a></li>
				</ul>
				<hr>
			</div>
			<ul class="navbar-nav flex-column text-left">
				<li class="nav-item active">
					<a class="nav-link" href="/"><i class="fas fa-home fa-fw mr-2"></i>Blog Home <span class="sr-only">(current)</span></a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="/about"><i class="fas fa-user fa-fw mr-2"></i>About Me</a></li>
				<li class="nav-item">
					<a class="nav-link" href="/blog-post"><i class="fas fa-bookmark fa-fw mr-2"></i>Blog Post</a></li>
			</ul>
			<div class="my-2 my-md-3">
				<a class="btn btn-primary" href="https://themes.3rdwavemedia.com/" target="_blank">Get in Touch</a>
			</div>
		</div>
	</nav>
</header>

<div class="main-wrapper">
	<section class="cta-section theme-bg-light py-5">
		<div class="container text-center">
			<h2 class="heading">DevBlog - Blog Website</h2>
			<div class="intro">Welcome to my blog. Subscribe and get my latest blog post in your inbox.</div>
			<form class="signup-form form-inline justify-content-center pt-3" action="/" method="post">
				<div class="form-group">
					<label class="sr-only" for="semail">Your email</label>
					<input type="text" name="Title" class="form-control col-lg-10 mr-md-1" placeholder="Title of a Blog">
					<label class="sr-only" for="semail">CONTENT</label>
					<textarea id="content" name="content" class="form-control col-lg-10 mr-md-1 semail" rows="5" placeholder="Enter Content"></textarea>
				</div>
				<button type="submit" name="button" class="btn btn-primary">Subscribe</button>
			</form>
		</div>
	</section>
	<section class="blog-list px-3 py-5 p-md-5">
		<div class="container">
			<div class="item mb-5">
				<% Titles.forEach(function(item) { %>
				<div class="media">
					<img class="mr-3 img-fluid post-thumb d-none d-md-flex" src="assets/images/blog/blog-post-thumb-2.jpg" alt="image">
					<div class="media-body">
						<h3 class="title mb-1"><a href="/blog-post"><%= item.name %></a></h3>
						<div class="meta mb-1"><span class="date">Published just now</span></div>
						<div class="intro"><%= item.content %></div>
						<a class="more-link" href="/blog-post">Read more &rarr;</a>
					</div>
				</div>
				<% }) %>
			</div>
			<nav class="blog-nav nav nav-justified my-5">
				<a class="nav-link-prev nav-item nav-link d-none rounded-left" href="#">Previous<i class="arrow-prev fas fa-long-arrow-alt-left"></i></a>
				<a class="nav-link-next nav-item nav-link rounded" href="/blog-list">Next<i class="arrow-next fas fa-long-arrow-alt-right"></i></a>
			</nav>
		</div>
	</section>
</div>

<!-- Javascript -->
<script src="assets/plugins/jquery-3.3.1.min.js"></script>
<script src="assets/plugins/popper.min.js"></script>
<script src="assets/plugins/bootstrap/js/bootstrap.min.js"></script>
