<%- include('partials/header') %>
<%- include('blog-nav') %>

<div class="content">
  <% Titles.forEach(title => { %>
  <div class="article" style="justify-content: center; align-items: center;">
    <h2 style="text-align: center; font-weight: 800; padding-top: 20px;">
      <%- title.name %>
    </h2>
    <div class="article-content" style="padding: 20px 20px 20px 20px;">
      <%- title.content %> <!-- Render the content as HTML -->
    </div>
    <p>Published on: <%= date %>/<%= month %>/<%= years %></p>
    <p>Total Likes: <span id="like-count-<%= title._id %>"><%- title.likes.length %></span></p>
  </div>

  <!-- Like button with checkbox -->
  <form action="/like" method="POST">
    <input type="hidden" name="postId" value="<%= title._id %>">
    <label class="contain">
      <button type="submit" class="read_bt">
        <input type="checkbox" name="like" value="1">
      </button>
      <svg class="svgss" id="Glyph" version="1.1" viewBox="0 0 32 32" xml:space="preserve"
        xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
        <path
          d="M29.845,17.099l-2.489,8.725C26.989,27.105,25.804,28,24.473,28H11c-0.553,0-1-0.448-1-1V13  c0-0.215,0.069-0.425,0.198-0.597l5.392-7.24C16.188,4.414,17.05,4,17.974,4C19.643,4,21,5.357,21,7.026V12h5.002  c1.265,0,2.427,0.579,3.188,1.589C29.954,14.601,30.192,15.88,29.845,17.099z"
          id="XMLID_254_"></path>
        <path
          d="M7,12H3c-0.553,0-1,0.448-1,1v14c0,0.552,0.447,1,1,1h4c0.553,0,1-0.448,1-1V13C8,12.448,7.553,12,7,12z   M5,25.5c-0.828,0-1.5-0.672-1.5-1.5c0-0.828,0.672-1.5,1.5-1.5c0.828,0,1.5,0.672,1.5,1.5C6.5,24.828,5.828,25.5,5,25.5z"
          id="XMLID_256_"></path>
      </svg>
    </label>
  </form>

  <!-- Unlike button with checkbox -->
  <form action="/unlike" method="POST">
    <input type="hidden" name="postId" value="<%= title._id %>">
    <label class="contain">
      <button type="submit" class="read_bt">
        <input type="checkbox" name="unlike" value="1">
      </button>
      <svg class="svgss" id="Glyph" version="1.1" viewBox="0 0 32 32" xml:space="preserve"
        xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
        <path d="M2.156,14.901l2.489-8.725C5.012,4.895,6.197,4,7.528,4h13.473C21.554,4,22,4.448,22,5v14  c0,0.215-0.068,0.425-0.197,0.597l-5.392,7.24C15.813,27.586,14.951,28,14.027,28c-1.669,0-3.026-1.357-3.026-3.026V20H5.999  c-1.265,0-2.427-0.579-3.188-1.589C2.047,17.399,1.809,16.12,2.156,14.901z"
          id="XMLID_259_"></path>
        <path d="M25.001,20h4C29.554,20,30,19.552,30,19V5c0-0.552-0.446-1-0.999-1h-4c-0.553,0-1,0.448-1,1v14  C24.001,19.552,24.448,20,25.001,20z M27.001,6.5c0.828,0,1.5,0.672,1.5,1.5c0,0.828-0.672,1.5-1.5,1.5c-0.828,0-1.5-0.672-1.5-1.5  C25.501,7.172,26.173,6.5,27.001,6.5z"
          id="XMLID_260_"></path>
      </svg>
    </label>
  </form>

  <div class="d-flex flex-row add-comment-section mt-4 mb-4"
    style="display: flex; justify-content: flex-end; align-items: center; border: 1px solid #ccc; padding: 10px;">
    <form class="form" action="/blog/<%= title._id %>/comments" method="POST">
      <input type="text" name="comment" class="form-control mr-3" placeholder="Add comment">
      <button class="btn btn-primary" type="submit">Comment</button>
    </form>
  </div>

  <% title.comments.forEach((comment) => { %>
  <div class="commented-section mt-2">
    <div class="d-flex flex-row align-items-center commented-user">
      <h5 class="mr-2">
        <%= comment.author %>
      </h5><span class="dot mb-1"></span><span class="mb-1 ml-2">4 hours ago</span>
    </div>
    <div class="comment-text-sm"><span>
        <%= comment.comment %>
      </span></div>
  </div>
  <% }) %> <!-- Render the content as HTML -->
  <% }) %>
</div>

<%- include('partials/footer') %>
